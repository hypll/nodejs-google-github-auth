<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!--  -->
        <link
            rel="stylesheet"
            href="/plugins/bootstrap/css/bootstrap.min.css"
        />
        <link rel="stylesheet" href="/plugins/fontawesome/css/all.css" />
        <!-- JavaScript Bundle with Popper -->
        <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

        <title>View </title>
    </head>
    <body>
        <%- include('partials/navbar.ejs') %>

        <section
            class="text-center mb-3"
            style="background-color: lightslategray"
        >
            <div class="row">
                <div class="col-md-12">
                    <img
                        src="<%- url %>"
                        alt="<%- name %>"
                        class="img-fluid"
                        width="30%"
                    />
                </div>
            </div>
        </section>

        <section class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center"><%- name %></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center">
                        Uploaded on <strong><%- uploadedAt %></strong>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center">
                        <a
                            href="<%- url %>"
                            download="<%- name %>"
                            class="btn btn-primary"
                        >
                            <i class="fa fa-download"></i> Download
                        </a>

                        <button
                            class="btn btn-success"
                            data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop"
                            type="button"
                        >
                            <i class="fa-solid fa-share"></i> Share
                        </button>

                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                        <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Share to</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
      <div class="modal-body">
            <a href="https://twitter.com/intent/tweet?text=Check%20out%20this%20image%20I%20just%20uploaded%20to%20imagemagik%20%23imagemagiktk&url=https://www.imagemagik.tk/view/<%- imgId %>" class="btn text-primary" style="font-size: 25px"><i class="fa-brands fa-twitter-square"></i></a>
            <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.imagemagik.tk/view/<%- imgId %>" class="btn text-primary" style="font-size: 25px;"><i class="fa-brands fa-facebook-square"></i></a>
            <a href="https://www.linkedin.com/shareArticle?mini=true&url=https://www.imagemagik.tk/view/<%- imgId %>&title=Check%20out%20this%20image%20I%20just%20uploaded%20to%20imagemagik%20%23imagemagiktk&summary=&source=" class="btn text-primary" style="font-size: 25px"><i class="fab fa-linkedin"></i></a>
            <a href="https://www.reddit.com/submit?url=https://www.imagemagik.tk/view/<%- imgId %>&title=Check%20out%20this%20image%20I%20just%20uploaded%20to%20imagemagik%20%23imagemagiktk" class="btn text-primary" style="font-size: 25px"><i class="fa-brands fa-reddit-square"></i></a>
            <a href="https://www.tumblr.com/widgets/share/tool?canonicalUrl=https://www.imagemagik.tk/view/<%- imgId %>&title=Check%20out%20this%20image%20I%20just%20uploaded%20to%20imagemagik%20%23imagemagiktk" class="btn text-primary" style="font-size: 25px"><i class="fa-brands fa-tumblr-square"></i></a>
            <a href="https://pinterest.com/pin/create/button/?url=https://www.imagemagik.tk/view/<%- imgId %>&media=https://www.imagemagik.tk/view/<%- imgId %>&description=Check%20out%20this%20image%20I%20just%20uploaded%20to%20imagemagik%20%23imagemagiktk" class="btn text-primary" style="font-size: 25px"><i class="fa-brands fa-pinterest-square"></i></a>
      </div>
       <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

                        <% if (userRole == 'admin') { %>
                        <a
                            href="/api/delete/image/<%- imageId %>"
                            onclick="return confirm('Are you sure you want to delete this image?')"
                            class="btn btn-danger"
                        >
                            <i class="fa fa-trash-alt"></i> Delete
                        </a>
                        <% } %>
                    </p>
                </div>
            </div>
        </section>
        <style>
            @media screen and (max-width: 768px) {
                .img-fluid {
                    width: 55%;
                }
            }

            @media screen and (max-width: 400px) {
                .img-fluid {
                    width: 60%;
                }
            }
        </style>
        <script>
            if (window.location.pathname == "/view/<%- imageId %>") {
                document.getElementById("home").classList.remove("active");
            }

            function logout() {
                window.location.href = "/auth/logout";
            }

            function upload() {
                window.location.href = "/dashboard#upload";
            }

            function sharetab() {
                window.open("/share/<%- imageId %>", "_blank");
            }
        </script>
    </body>
</html>
