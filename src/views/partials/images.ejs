<script>
    document
        .getElementById("deleteBtn")
        .addEventListener("click", function (e) {
            e.preventDefault();
            if (
                confirm(
                    "Are you sure you want to delete your image? \n\n Once deleted, you will not be able to recover your image!"
                )
            ) {
                window.location.href = this.href;
            }
        });
</script>
<section id="images" class="card">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card-body">
                    <h2 class="card-title text-center">Your images</h2>
                    <% if (images.length > 0) { %>
                    <h6
                        class="text-center text-secondary mb-3"
                        style="font-size: 15px"
                    >
                        You dont have any images.
                        <span>Upload?</span>
                    </h6>
                    <% } %>
                    <div class="row">
                        <% for (let image of images) { %> <% if (id ==
                        image.uploadedBy) { %>
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <img
                                    src="<%- image.imagePath %>"
                                    alt="<%- image.imageName %>"
                                    width="20%"
                                    class="card-img-top"
                                />
                                <div class="card-body">
                                    <p class="card-text">
                                        <%- image.imageName %>
                                    </p>
                                    <a
                                        href="/view/<%- image.imageId %>"
                                        target="_blank"
                                        class="btn btn-primary"
                                    >
                                        <i class="fa fa-eye"></i> View
                                    </a>
                                    <a
                                        class="btn btn-secondary"
                                        onclick="navigator.clipboard.writeText('<%- host %>/view/<%- image.imageId %>'); innerText = 'âœ… Copied!'; setTimeout(() => { innerText = 'ðŸ”— Copy link'; }, 2000);"
                                        data-id="<%- image._id %>"
                                    >
                                        ðŸ”— Copy link
                                    </a>
                                    <a
                                        type="button"
                                        class="btn btn-danger"
                                        data-toggle="modal"
                                        href="/api/delete/image/<%- image._id %>"
                                        onclick="return confirm('Are you sure you want to delete this image?');"
                                        data-target="<%- image._id %>"
                                        data-id="<%- image.id %>"
                                    >
                                        <i class="fa fa-trash-alt"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %> <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
