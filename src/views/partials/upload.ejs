<div id="upload" class="row mt-5 mb-5">
    <div class="col-sm-auto m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Upload</h1>
            <form
                action="/api/upload/single"
                method="POST"
                enctype="multipart/form-data"
            >
                <input
                    type="file"
                    name="image"
                    accept="image/png, image/jpeg, image/jpg"
                    class="mb-3"
                    required
                />
                <div class="form-check mb-2">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="defaultCheck1"
                        required
                    />
                    <label class="form-check-label" for="defaultCheck1">
                        I accept the <a href="#">Terms</a> &
                        <a href="#">Privacy Policy.</a>
                    </label>
                </div>
                <input
                    type="submit"
                    value="Upload"
                    class="btn btn-dark btn-block mt-3"
                />
            </form>
        </div>
    </div>
</div>
