        <!-- create section for the user profile -->
        <section class="container-fluid mt-3">
            <div class="container mb-4">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center"><%- disName %></h1>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img
                                src="<%- profilePicture %>"
                                alt="<%- username %>"
                                class="img-fluid"
                                style="max-width: 30%"
                            />
                        </div>
                        <div class="col-md-8">
                            <h2 class="text-center"><%- disName %></h2>
                            <p class="text-center"><%- bio %></p>
                            <hr style="opacity: 0.1" />
                            <div class="text-center">
                                <span><strong>Joined</strong></span>
                                <span class="text-secondary d-block">
                                    <%- joinedAt %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <% if (userId == trueUserId) { %>
                    <button
                        onclick="window.location.href='/dashboard'"
                        class="btn btn-primary btn-block"
                    >
