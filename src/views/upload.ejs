<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs') %>
        <title>Upload Image</title>
    </head>
    <body>
        <div class="row mt-5">
            <div class="col-sm-auto m-auto">
                <div class="card card-body">
                    <h1 class="text-center mb-3">Upload</h1>
                    <form
                        action="/api/upload/single"
                        method="POST"
                        enctype="multipart/form-data"
                    >
                        <div class="form-group">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input
                                        type="file"
                                        class="custom-file-input"
                                        name="image"
                                        accept="image/png, image/jpeg, image/jpg"
                                        id="inputGroupFile02"
                                        required
                                    />
                                    <label
                                        class="custom-file-label"
                                        for="inputGroupFile02"
                                        aria-describeby="inputGroupFileAddon02"
                                        >Choose file</label
                                    >
                                </div>
                            </div>
                        </div>
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="checkbox"
                                value=""
                                id="defaultCheck1"
                                required
                            />
                            <label class="form-check-label" for="defaultCheck1">
                                I accept the <a href="#">Terms</a> &
                                <a href="#">Privacy Policy.</a>
                            </label>
                        </div>
                        <input
                            type="submit"
                            value="Upload"
                            class="btn btn-dark btn-block mt-3"
                        />
                    </form>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-sm-auto m-auto">
                <div class="card card-body">
                    <h5 class="text-center mb-3">Give a star on Github!</h5>
                    <p class="text-center">
                        <a
                            class="btn btn-dark"
                            href="https://github.com/lassv/imagemagik"
                            target="_blank"
                        >
                            <i class="fab fa-github"></i>
                            Github
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </body>
</html>
